<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
<h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
<p><%= link_to restaurant.category, restaurant_path(restaurant) %></p>
<p><%= link_to restaurant.address, restaurant_path(restaurant) %></p>
<%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
<% end %>



<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-warning"%>
